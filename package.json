{
  "name": "hospital-erp-system",
  "version": "1.0.0",
  "description": "ERP system for hospital procurement, inventory, and approvals",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "nodemon src/server.js",
    "test": "npx tsc --noEmit",
    "migrate": "sequelize-cli db:migrate --config backend-api/config/config.js",
    "migrate:undo": "sequelize-cli db:migrate:undo --config backend-api/config/config.js",
    "seed": "sequelize-cli db:seed:all --config backend-api/config/config.js",
    "seed:undo": "sequelize-cli db:seed:undo:all --config backend-api/config/config.js"
  },
  "author": "Victor",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.5",
    "@types/sequelize": "^4.28.20",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/bcrypt": "^5.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "sequelize-cli": "^6.6.2"
  }
}
